        MDLabel:
            size_hint: 1,0.6
            text: 'Смотрите расписание прямо в приложении, не заходя на сайт!'
            theme_text_color: 'Custom'
            font_size: '24dp'
            halign: 'center'
            color: 1,1,1,1


<Tips2@MDScreen>:
    name: 'tips2'
    md_bg_color: app.theme_cls.primary_color
    MDBoxLayout:
        padding: '10dp'
        orientation: 'vertical'
        Image:
            source: 'assets/tips2.gif'
            size: self.texture_size
            anim_delay: 1/30
        MDLabel:
            size_hint: 1,0.6
            text: 'Проверяйте новости колледжа!'
            theme_text_color: 'Custom'
            font_size: '24dp'
            halign: 'center'
            color: 1,1,1,1

<Tips3@MDScreen>:
    name: 'tips3'
    md_bg_color: app.theme_cls.primary_color
    MDBoxLayout:
        padding: '10dp'
        orientation: 'vertical'
        Image:
            source: 'assets/tips3.gif'
            size: self.texture_size
            anim_delay: 1/30
        MDLabel:
            size_hint: 1,0.6
            text: 'Следите за своим местом в рейтинге и получайте уведомлении о изменении места в нем!'
            theme_text_color: 'Custom'
            font_size: '24dp'
            halign: 'center'
            color: 1,1,1,1


<SkipTipsButton@MDFlatButton>:
    font_size: '18dp'
    text: 'Пропустить'
    pos_hint: {"x": 0, 'y': 0.5}
    text_color: 1,1,1,1
    theme_text_color: "Custom"

<BackTipsButton@MDIconButton>:
    icon: 'arrow-left'
    pos_hint: {"x": 0, 'y': 0.5}
    opposite_colors: True
    text_color: 1,1,1,1
    user_font_size: "36dp"
    theme_text_color: "Custom"


<Start@ScreenManager>:
    transition: FadeTransition()
    WelcomeScreen:
        id: welcome_screen
    Screen:
        name: 'tips'
        MDBoxLayout:
            orientation: "vertical"
            ScreenManager:
                id: sm_tips
                Tips1:
                    on_pre_enter:
                        self.manager.transition.direction = 'left'
                        app.change_nav_tips_button(args)
                    on_pre_leave:
                        app.change_nav_tips_button(args)
                Tips2:

                Tips3:
                    on_pre_enter:
                        self.manager.transition.direction = 'left'
                    on_enter:
                        self.manager.transition.direction = 'left'
            MDFloatLayout:
                id: tips_buttons
                md_bg_color: app.theme_cls.primary_color
                size_hint: 1,0.1
                SkipTipsButton:
                    on_release: sm_tips.current = 'tips1'
                MDIconButton:
                    icon: 'arrow-right'
                    test: self.width / root.width
                    pos_hint: {"x": 1 - self.test, 'y': 0.5}
                    opposite_colors: True
                    text_color: 1,1,1,1
                    user_font_size: "36dp"
                    theme_text_color: "Custom"
                    on_release: sm_tips.current = sm_tips.next()


NavBar:
    id: navbar
    TimetableContent:
        id: timetable
    SettingsContent:
        id: settings